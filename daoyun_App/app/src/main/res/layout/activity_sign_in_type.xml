<?xml version="1.0" encoding="utf-8"?>
<com.example.test.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:left_btn_src="@mipmap/icon_back"
    app:title_visible="true"
    app:title_text="选择签到类型"
    tools:context="com.example.test.SignInTypeActivity">

    <Button
        android:id="@+id/set_one_btn"
        android:background="#32A082"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置一键签到"/>

    <Button
        android:id="@+id/set_gesture_btn"
        android:background="#32A082"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置手势签到"/>

</com.example.test.CustomToolBar>