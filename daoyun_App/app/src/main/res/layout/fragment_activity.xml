<?xml version="1.0" encoding="utf-8"?>
<com.example.test.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:left_btn_src="@mipmap/icon_back"
    app:title_visible="true"
    app:title_text="活动"
    app:right_tv_visible="true"
    app:right_tv_text="课堂表现"
    tools:context="com.example.test.ClassTabActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/activity_all_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_all_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="全部"/>

            <TextView
                android:id="@+id/activity_all_num_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center_horizontal"/>

            <View
                android:id="@+id/activity_all_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D8DDE1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_doing_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_doing_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="进行中"/>

            <TextView
                android:id="@+id/activity_doing_num_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center_horizontal"/>

            <View
                android:id="@+id/activity_doing_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D8DDE1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_finish_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_finish_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="已结束"/>

            <TextView
                android:id="@+id/activity_finish_num_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"/>

            <View
                android:id="@+id/activity_finish_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D8DDE1"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_content_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </RelativeLayout>

</com.example.test.CustomToolBar>